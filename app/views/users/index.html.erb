<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-6" id="search">
            <h2>Search WriterShare for Your Friends</h2>
            <%= render :partial => 'users/search' %>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <ul>
                <% @users.each do |user| %>
                    <li>
                    <hr> <!-- creates the line break for the users to be seperated -->
                        
                        <% if user.avatar_file_name %> <!--shows the user's avatar if present-->
                            <!-- We need to move the below styling to a CSS file at some point -->
                            <%= link_to image_tag(user.avatar_url(:thumb)), user_path(user), style: "padding: 0" %>
                        <% end %>
                        <%= link_to user.name, :action => 'show', :id => user.id  %>
                     </li>
                <% end %>
            </ul>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>
